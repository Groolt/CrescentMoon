<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeef2"
    android:orientation="vertical"
    tools:context=".activity.QLKHActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lnl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_title"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Quản lý khách hàng"
            android:textColor="@color/textcolor_primary"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingVertical="8dp"
            android:paddingRight="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingHorizontal="11dp"
                android:paddingBottom="4dp"
                android:text="Top 3"
                android:textColor="@color/textcolor_primary"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv1"
                android:background="@drawable/bg_top3"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/top1"
                app:layout_constraintEnd_toEndOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv1"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor_primary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                android:id="@+id/tentop1"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/mota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.000.000 vnđ"
                android:textColor="@color/textcolor_primary"
                app:layout_constraintBaseline_toBaselineOf="@+id/tentop1"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgtop2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/top2"
                app:layout_constraintEnd_toEndOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv1"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                android:layout_marginTop="12dp"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bá Hảo Nguyễn"
                android:textColor="@color/textcolor_primary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgtop2"
                app:layout_constraintStart_toEndOf="@+id/imgtop2"
                app:layout_constraintTop_toTopOf="@+id/imgtop2"
                android:id="@+id/tentop2"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/mota2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.000.000 vnđ"
                android:textColor="@color/textcolor_primary"
                app:layout_constraintBaseline_toBaselineOf="@+id/tentop2"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgtop3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/top3"
                app:layout_constraintEnd_toEndOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv1"
                app:layout_constraintTop_toBottomOf="@+id/imgtop2"
                android:layout_marginTop="12dp"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hảo Nguyễn"
                android:textColor="@color/textcolor_primary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgtop3"
                app:layout_constraintStart_toEndOf="@+id/imgtop3"
                app:layout_constraintTop_toTopOf="@+id/imgtop3"
                android:id="@+id/tentop3"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/mota3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đã đặt 122 đơn"
                android:textColor="@color/textcolor_primary"
                app:layout_constraintBaseline_toBaselineOf="@+id/tentop3"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingHorizontal="8dp"
                android:paddingBottom="4dp"
                android:text="Danh sách"
                android:textColor="@color/textcolor_primary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/ds"
                android:background="@drawable/bg_top3"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"/>
            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:padding="16dp"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ds" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>