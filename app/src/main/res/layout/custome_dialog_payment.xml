<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E8ECF2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Subtotal: "
            android:textSize="23sp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/diapay_txtsub"
            android:text="140$"
            android:textSize="23sp"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tax: "
            android:textSize="23sp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/diapay_txttax"
            android:text="14$"
            android:textSize="23sp"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Service Fee: "
            android:textSize="23sp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/diapay_txtserfee"
            android:text="20$"
            android:textSize="23sp"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DAE3F3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voucher: "
                android:textSize="23sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/diaopay_btnvoucher"
                android:text="Use"
                android:background="@color/yellow"
                android:visibility="visible"
                android:textSize="23sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/diapay_txtvoucher"
                android:text="- 20$"
                android:visibility="gone"
                android:textSize="23sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Total: "
                android:textSize="23sp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:id="@+id/diapay_txttotal"
                android:text="174$"
                android:textSize="23sp"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diaopayment_btnCheck"
        android:text="Process to Checkout"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:backgroundTint="#000"
        android:textColor="#fff"/>
</LinearLayout>