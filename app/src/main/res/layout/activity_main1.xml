<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".activity.HomeAdminActivity"
    android:background="#E6E6E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lnl_toolbar"
            tools:ignore="MissingConstraints"
            android:background="@color/white">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@null"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:text="Trang chủ"
                android:textColor="@color/textcolor_primary"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="10dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/lnl_toolbar"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginTop="-20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="30dp"
                            android:paddingTop="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="19dp"
                                android:paddingTop="16dp"
                                android:paddingHorizontal="40dp">
                                <TextView
                                    android:id="@+id/tv_tong_doanh_thu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/textcolor_primary"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:lineSpacingExtra="3dp"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:paddingHorizontal="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:weightSum="2"
                                    android:orientation="vertical"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginLeft="16dp">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="12dp"
                                        android:backgroundTint="#E6EFFF"
                                        android:layout_weight="1"
                                        app:cardElevation="0dp"
                                        android:id="@+id/layoutsb2">
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:paddingLeft="20dp"
                                            android:layout_gravity="center">
                                            <TextView
                                                android:id="@+id/tv_so_khach"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                android:textStyle="bold"
                                                android:textSize="18dp"
                                                android:textColor="@color/black"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" chỗ ngồi"
                                                app:layout_constraintStart_toEndOf="@+id/tv_so_khach"
                                                app:layout_constraintBaseline_toBaselineOf="@+id/tv_so_khach"
                                                android:textColor="@color/textcolor_primary"/>
                                            <TextView
                                                android:layout_marginTop="4dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Đang giữ"
                                                app:layout_constraintTop_toBottomOf="@+id/tv_so_khach"
                                                android:textColor="@color/textcolor_primary"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_marginTop="16dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="12dp"
                                        android:backgroundTint="#EAFBFC"
                                        android:layout_weight="1"
                                        app:cardElevation="0dp"
                                        android:id="@+id/layoutdon">
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:paddingLeft="20dp"
                                            android:layout_gravity="center">

                                            <TextView
                                                android:id="@+id/tv_so_don"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                android:textStyle="bold"
                                                android:textSize="18dp"
                                                android:textColor="@color/black"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" đơn"
                                                android:textColor="@color/textcolor_primary"
                                                app:layout_constraintStart_toEndOf="@+id/tv_so_don"
                                                app:layout_constraintBaseline_toBaselineOf="@+id/tv_so_don"/>
                                            <TextView
                                                android:layout_marginTop="4dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Đang có"
                                                android:textColor="@color/textcolor_primary"
                                                app:layout_constraintTop_toBottomOf="@+id/tv_so_don"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#F0EFFF"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="16dp"
                                    app:cardElevation="0dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/layoutsb">

                                        <com.google.android.material.progressindicator.CircularProgressIndicator
                                            android:layout_margin="8dp"
                                            android:id="@+id/progress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:progress="0"
                                            android:rotation="0"
                                            app:indicatorColor="#F79403"
                                            app:indicatorSize="100dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:trackColor="#fed598"
                                            app:trackCornerRadius="4dp"
                                            app:trackThickness="9dp" />

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            app:layout_constraintBottom_toBottomOf="@+id/progress"
                                            app:layout_constraintEnd_toEndOf="@+id/progress"
                                            app:layout_constraintStart_toStartOf="@+id/progress"
                                            app:layout_constraintTop_toTopOf="@+id/progress">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:id="@+id/tv_so_ban"
                                                app:layout_constraintStart_toStartOf="parent"
                                                android:textStyle="bold"
                                                tools:ignore="MissingConstraints"
                                                android:textColor="@color/black"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tv_tong_so_ban"
                                                android:text="/100"
                                                app:layout_constraintStart_toEndOf="@+id/tv_so_ban"
                                                tools:ignore="MissingConstraints"
                                                android:textColor="@color/textcolor_primary"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Số bàn đã dùng"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/progress"
                                            android:padding="8dp"
                                            android:textColor="@color/textcolor_primary"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="-20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="40dp">
                            <LinearLayout
                                android:layout_marginTop="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:columnCount="3"
                                android:weightSum="3"
                                android:paddingHorizontal="16dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qldt"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="14dp"
                                    android:layout_marginLeft="16dp"
                                    android:paddingHorizontal="8dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qldt"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qldt"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý doanh thu"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qldt"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qlBan"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="14dp"
                                    android:layout_marginHorizontal="16dp"
                                    android:paddingHorizontal="8dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlban"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qlban"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý\nbàn"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlban"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qllichdat"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="14dp"
                                    android:layout_marginRight="16dp"
                                    android:paddingHorizontal="8dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlld"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:src="@drawable/icon_qlld"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý lịch đặt"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlld"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:columnCount="3"
                                android:weightSum="3"
                                android:paddingHorizontal="16dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qlmon"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginVertical="14dp"
                                    >
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlmon"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qlmon"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý\nmón"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlmon"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qlnv"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="16dp"
                                    android:layout_marginVertical="14dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlnv"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qlnv"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý nhân viên"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlnv"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qlkh"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginVertical="14dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlkh"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qlkh"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý khách hàng"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlkh"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:columnCount="3"
                                android:weightSum="3"
                                android:paddingHorizontal="16dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_traCuuHD"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="14dp"
                                    android:layout_marginLeft="16dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_tchd"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_search"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Tra cứu hóa đơn"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_tchd"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/item_qlvc"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#ECF1F9"
                                    app:cardCornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="14dp"
                                    android:layout_marginHorizontal="16dp">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:paddingTop="4dp"
                                            android:id="@+id/icon_qlvc"
                                            android:layout_width="47dp"
                                            android:layout_height="47dp"
                                            android:src="@drawable/icon_qlvc"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/textcolor_primary"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:paddingBottom="8dp"
                                            android:text="Quản lý\nVoucher"
                                            android:textAlignment="center"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/icon_qlvc"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
