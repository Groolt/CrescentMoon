<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CTNVActivity"
    android:background="#eaeef2"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lnl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_title"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Thông tin NV"
            android:textColor="#f0810f"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="30dp">

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="30dp"
                    android:padding="2dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nguyễn Bá Hảo"
                    android:textColor="#f0810f"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                    app:layout_constraintStart_toStartOf="@+id/circleImageView"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_vitri"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ten"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vị trí:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/vitri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phục vụ"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_vitri"/>
                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_loai"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_vitri"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/loai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Part-time"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_loai"/>

                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_gender"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_loai"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_gender"/>
                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_sdt"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_gender"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SĐT:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0963618637"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_sdt"/>
                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_CCCD"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_sdt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CCCD:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/cccd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0963618637"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_CCCD"/>
                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="4dp"
                    android:id="@+id/layout_Calam"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_CCCD"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ca làm:"
                        android:textColor="#757373"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/calam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ca 1 (7h30-9h30),
                        Ca 2 (9h30-11h30),
                        Ca 3 (11h30-13h30),
                        Ca 4 (13h30-15h30),
                        Ca 5 (15h30-17h30)"
                        android:textColor="@color/textcolor_primary"
                        android:textSize="18dp"
                        android:textAlignment="textStart"
                        android:paddingLeft="30dp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5d57b"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_Calam"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_Calam"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>