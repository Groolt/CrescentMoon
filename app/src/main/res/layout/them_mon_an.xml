<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_corner_20"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ảnh"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/textcolor_primary"/>
        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_img"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#ED8A08"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chọn ảnh"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:textColor="@color/textcolor_primary"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên món"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/textcolor_primary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/tenMon"
        android:hint="--Trống--"
        android:background="@drawable/bg_edit_text"
        android:paddingLeft="16dp"
        android:textSize="15dp"/>
    <TextView
        android:textColor="@color/textcolor_primary"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:textSize="16dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/Loai"
        android:background="@drawable/style_spinner_form"
        android:paddingLeft="16dp"
        android:textSize="15dp"/>
    <TextView
        android:textColor="@color/textcolor_primary"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:textSize="16dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/Gia"
        android:hint="--Trống--"
        android:background="@drawable/bg_edit_text"
        android:paddingLeft="16dp"
        android:textSize="15dp"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingVertical="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#063852"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="20dp"
            app:cardElevation="0dp"
            android:id="@+id/cancel_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="4dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F0810F"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="20dp"
            app:cardElevation="0dp"
            android:id="@+id/confirm_button">
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Thêm"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="4dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>